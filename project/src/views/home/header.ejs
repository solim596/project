        crossorigin="anonymous"></script>
    <script>
        // 로그인 여부에 따라 메뉴 항목 표시/숨기기
        const isLoggedIn = true; // 로그인 상태 여부에 따라 값을 조정하세요 (예: 로그인 했으면 true, 로그아웃 했으면 false)

        const loginLink = document.getElementById("loginLink");
        const signupLink = document.getElementById("signupLink");
        const mypageLink = document.getElementById("mypageLink");
        const logoutLink = document.getElementById("logoutLink");

        if (isLoggedIn) {
            // 로그인 상태
            loginLink.style.display = "none"; // "로그인" 링크 숨기기
            signupLink.style.display = "none"; // "회원가입" 링크 숨기기
            mypageLink.style.display = "block"; // "마이페이지" 링크 표시
            logoutLink.style.display = "block"; // "로그아웃" 링크 표시
        } else {
            // 로그아웃 상태
            loginLink.style.display = "block"; // "로그인" 링크 표시
            signupLink.style.display = "block"; // "회원가입" 링크 표시
            mypageLink.style.display = "none"; // "마이페이지" 링크 숨기기
            logoutLink.style.display = "none"; // "로그아웃" 링크 숨기기
        }
    </script>
